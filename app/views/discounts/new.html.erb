<h1>Create New Discount</h1>

<%= form_with url: "/merchant/#{@merchant.id}/discounts", method: :post, local: true do |f| %>
  <%= f.label :threshold %>
  <%= f.text_field :threshold %><br><br>
  <%= f.label :percentage %>
  <%= f.text_field :percentage %><br><br>
  <%= f.submit "Submit" %>
<% end %>